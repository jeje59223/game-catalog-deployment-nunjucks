{% extends "layoutTitles.njk" %}


{% block title %}Games Management{% endblock %}
{% block content %}

<table class="table table-hover mt-4">
    <thead>
        <tr class="text-center">
            <th scope="col">Titre du Jeu</th>
            <th scope="col" colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for game in games %}
        <tr>
            <td class="p-3">{{ game.name }}</td>
            <td><a href="/games/{{ game.slug }}"><button type="button" class="btn btn-primary mr-3"><i class="fas fa-eye"></i> Details</button></a></td>
            <td><button type="button" class="btn btn-warning mr-3"><i class="fas fa-pencil-alt"></i> Update</button></td>
            <td><button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i> Delete</button></td>
        </tr>
        {% endfor %}
        </tbody>
  </table>
  <button type="button" class="btn btn-success btn-lg w-100 mt-4"><i class="fas fa-plus-circle"></i> Add Game</button>
{% endblock %}