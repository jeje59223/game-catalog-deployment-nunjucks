{% extends "layoutTitles.njk" %}

{% block title %}Jeux pour : 
{% for console in consoles %}
{{ console.name }}
{% endfor %}

{% endblock %}
{% block content %}
<div class="row mb-5">
    {% for console in consoles %}
        {% for jeu in console.games %}
            <div class="col-12 col-md-3 d-flex flex-wrap">
                <div class="card mb-3 border border-success" style="width: 18rem;">
                    <img src="{{jeu.cover.url}}" class="card-img-top" alt="..." style="max-height: 380px;">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ jeu.name }}</h5>
                    </div>
                    <div class="card-footer">
                        <a href="/games/{{ jeu.slug }}" class="btn btn-primary btn-block">Detail</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}
