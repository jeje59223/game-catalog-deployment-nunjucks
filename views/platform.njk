{% extends "layoutTitles.njk" %}

{% block title %}Les consoles{% endblock %}
{% block content %}
<div class="row mb-5">
    {% for console in platforms %}
        <div class="col-12 col-md-4 d-flex flex-wrap" >
            <div class="card border border-success mb-3" style="min-width: 350px;min-height:673px">
                <h3 class="card-header text-center">{{ console.name }}</h3>
                <img class="bg-white" style="height: 300px; width: 100%; display: block;" src={{ console.platform_logo.url }} alt="Card image">
                <div class="card-body">
                <p class="card-text">{{ console.summary }}</p>
                </div>
                <div class="card-footer text-muted">
                    <a href=/platforms/{{ console.slug }}><button type="button"  class="btn btn-primary btn-lg btn-block">See More</button></a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}